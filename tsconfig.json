{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "lib",
        "target": "ES2022",
        "module": "ESNext",
        "declaration": true,
        "emitDeclarationOnly": true,
        "composite": true,
        "incremental": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "jsxImportSource": "@satorijs/element",
        "types": [
            "node",
            "yml-register/types"
        ]
    },
    "include": [
        "src"
    ]
}